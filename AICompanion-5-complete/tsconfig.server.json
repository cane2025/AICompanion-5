{
  "extends": "./tsconfig.json",
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client/**/*", "node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true
  }
}
