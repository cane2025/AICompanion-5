{
  "name": "healthcare-management-system",
  "description": "Advanced healthcare management web application for streamlining administrative workflows",
  "type": "nodejs",
  "runtime": {
    "name": "nodejs",
    "version": "20"
  },
  "build": {
    "command": "npm ci --production=false && npm run build",
    "outputDirectory": "dist",
    "environment": {
      "NODE_ENV": "production"
    }
  },
  "start": {
    "command": "npm start",
    "environment": {
      "NODE_ENV": "production",
      "PORT": "5000"
    }
  },
  "healthCheck": {
    "path": "/api/health",
    "port": 5000,
    "timeout": 10000
  },
  "dependencies": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "features": {
    "database": true,
    "sessions": true,
    "authentication": true
  }
}